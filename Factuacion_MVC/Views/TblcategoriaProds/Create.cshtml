@model Factuacion_MVC.Models.TblcategoriaProd

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid m-2">
    <h1 class="mt-2 titulos"><b>Agregar</b></h1>

    <h4 class="mt-2 titulos">Categoria Producto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 ms-3">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="StrDescripcion" class="control-label">Nombre Categoria</label>
                    <input asp-for="StrDescripcion" class="form-control" />
                    <span asp-validation-for="StrDescripcion" class="text-danger"></span>
                </div>
                <div class="d-flex mx-auto mt-3 justify-content-center align-items-center">
                    <div class="form-group m-2">
                        <input type="submit" value="Crear" class="btn btn-outline-success ps-4 pe-4" />
                    </div>
                    <div class="m-2">
                        <a asp-action="Index" class="btn btn-outline-danger ">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
