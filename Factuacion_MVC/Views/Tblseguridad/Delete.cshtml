@model Factuacion_MVC.Models.Tblseguridad

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid m-2">
    <h1 class="mt-2 titulos">Eliminar</h1>

    <div class="row">

        <h4 class="mt-2 titulos">Usuario</h4>
        <hr />
        <h3 class="mb-2 ms-4 mb-2 fw-normal">¿Seguro de eliminar esto?</h3>
        <div class="col-6 w-50">
            <dl class="row ms-3">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.StrUsuario)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.StrUsuario)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.StrClave)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.StrClave)
                </dd>
                <dt class = "col-sm-2">
                    Empleado
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.IdEmpleadoNavigation.StrNombre)
                </dd>

                <div class="d-flex w-50 mt-3 justify-content-center align-items-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdSeguridad" />
                        <input type="submit" value="Eliminar" class="btn btn-outline-danger me-2" />
                        <a asp-action="Index" class="btn btn-outline-warning ms-2">Cancelar</a>
                    </form>
                </div>

            </dl>
        </div>
    </div>
</div>
