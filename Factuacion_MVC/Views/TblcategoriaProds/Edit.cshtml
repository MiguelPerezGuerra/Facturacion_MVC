@model Factuacion_MVC.Models.TblcategoriaProd

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid m-2">
    <h1 class="mt-2 titulos"><b>Editar</b></h1>

    <h4 class="mt-2 titulos">Categoria Producto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 ms-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCategoria" />
                <div class="form-group mb-2">
                    <label asp-for="StrDescripcion" class="control-label">Nombre Producto</label>
                    <input asp-for="StrDescripcion" class="form-control" />
                    <span asp-validation-for="StrDescripcion" class="text-danger"></span>
                </div>

                <div class="d-flex mx-auto justify-content-center align-items-center">
                    <div class="form-group m-2">
                        <input type="submit" value="Guardar" class="btn btn-outline-success ps-3 pe-3" />
                    </div>
                    <div class="m-2">
                        <a asp-action="Index" class="btn btn-outline-danger ">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
