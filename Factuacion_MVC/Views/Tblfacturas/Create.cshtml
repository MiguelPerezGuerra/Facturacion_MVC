@model Factuacion_MVC.Models.Tblfactura

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid m-2">
    <h1 class="mt-2 titulos"><b>Agregar</b></h1>

    <h4 class="mt-2 titulos">Factura</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 ms-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group  mb-2">
                    <label asp-for="DtmFecha" class="control-label">Fecha</label>
                    <input asp-for="DtmFecha" class="form-control" />
                    <span asp-validation-for="DtmFecha" class="text-danger"></span>
                </div>
                <div class="form-group  mb-2">
                    <label asp-for="IdCliente" class="control-label">Cliente</label>
                    <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
                </div>
                <div class="form-group  mb-2">
                    <label asp-for="IdEmpleado" class="control-label">Empleado</label>
                    <select asp-for="IdEmpleado" class ="form-control" asp-items="ViewBag.IdEmpleado"></select>
                </div>
                <div class="form-group  mb-2">
                    <label asp-for="NumDescuento" class="control-label">Valor Descuento</label>
                    <input asp-for="NumDescuento" class="form-control" />
                    <span asp-validation-for="NumDescuento" class="text-danger"></span>
                </div>
                <div class="form-group  mb-2">
                    <label asp-for="NumImpuesto" class="control-label">Valor Impuesto</label>
                    <input asp-for="NumImpuesto" class="form-control" />
                    <span asp-validation-for="NumImpuesto" class="text-danger"></span>
                </div>
                <div class="form-group  mb-2">
                    <label asp-for="NumValorTotal" class="control-label">Valor Total</label>
                    <input asp-for="NumValorTotal" class="form-control" />
                    <span asp-validation-for="NumValorTotal" class="text-danger"></span>
                </div>
                <div class="form-group  mb-2">
                    <label asp-for="IdEstado" class="control-label">Estado</label>
                    <select asp-for="IdEstado" class ="form-control" asp-items="ViewBag.IdEstado"></select>
                </div>

                <div class="d-flex mx-auto justify-content-center align-items-center">
                    <div class="form-group m-2">
                        <input type="submit" value="Crear" class="btn btn-outline-success ps-4 pe-4" />
                    </div>
                    <div class="m-2">
                        <a asp-action="Index" class="btn btn-outline-danger ">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
