@model Factuacion_MVC.Models.TblcategoriaProd

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid m-2">
    <h1 class="mt-2 titulos">Detalles</h1>

    <div class="row">

        <h4 class="mt-2 titulos">Categoria Producto</h4>
        <hr />
        <div class="col-6">

                <dl class="row ms-3">
                    <dt class = "col-sm-4">
                        Nombre Producto:
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.StrDescripcion)
                    </dd>
                    <dt class = "col-sm-4">
                        Fecha Modificación:
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.DtmFechaModifica)
                    </dd>
                    <dt class = "col-sm-4">
                        Usuario Modifica:
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.StrUsuarioModifico)
                    </dd>
                </dl>

            <div class="d-flex w-50 justify-content-center align-items-center">
                <a asp-action="Edit" class="btn btn-outline-primary me-2" asp-route-id="@Model?.IdCategoria">Editar</a>
                <a asp-action="Index" class="btn btn-outline-warning ms-2">Volver</a>
            </div>
        </div>
    </div>
</div>