@model Factuacion_MVC.Models.Tblrole

@{
    ViewData["Title"] = "Details";
}

    <div class="container-fluid m-2">
        <h1 class="mt-2 titulos">Detalles</h1>

        <div class="row">

            <h4 class="mt-2 titulos">Empleado</h4>
            <hr />
            <div class="col-6 w-50">
                <dl class="row ms-3">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.StrDescripcion)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.StrDescripcion)
                    </dd>

                    <div class="d-flex w-50 mt-3 justify-content-center align-items-center">
                        <a asp-action="Edit" class="btn btn-outline-primary me-2" asp-route-id="@Model?.IdRolEmpleado">Editar</a>
                        <a asp-action="Index" class="btn btn-outline-warning ms-2">Volver</a>
                    </div>

                </dl>
            </div>
        </div>
    </div>

