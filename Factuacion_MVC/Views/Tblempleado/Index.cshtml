@model IEnumerable<Factuacion_MVC.Models.Tblempleado>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid m-2">

    <h1 class="mt-2 titulos">Administrar <b>Empleados</b></h1>

    <div class="row">
        <div class="col-sm-8">
            <div class="search-box w-100">
                <i class="bi bi-search"></i>
                <input type="text" class="form-control" placeholder="Buscar&hellip;">
            </div>
        </div>
        <div class="col-sm-4">
            <p>
                <a asp-action="Create" class="btn btn-outline-info">+ Agregar</a>
            </p>

        </div>
    </div>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Documento
                </th>
                <th>
                    Dirección
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Email
                </th>
                <th>
                    Fecha de Ingreso
                </th>
                <th>
                    Fecha de Retiro
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StrNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StrDireccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StrTelefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StrEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtmIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtmRetiro)
                </td>

                    <td class="text-center">
                        <a asp-action="Edit" class="text-primary ps-1 pe-1" asp-route-id="@item.IdEmpleado"><i class="bi bi-pencil-fill"></i></a> |
                        <a asp-action="Details" class="text-warning ps-1 pe-1" asp-route-id="@item.IdEmpleado"><i class="bi bi-eye-fill"></i></a> |
                        <a asp-action="Delete" class="text-danger ps-1 pe-1" asp-route-id="@item.IdEmpleado"><i class="bi bi-trash-fill"></i></a>
                    </td>
                
            </tr>
    }
        </tbody>
    </table>
</div>
